<%= form_with(model: @user, class:'form-signin', method: :POST) do |f|%>
  <h1 class="h3 mb-3 font-weight-normal">Create an account</h1>
  <% if @error or @user.errors %>
    <div class="error_explanation">
      <% if @error %>
        <a><%= @error %></a><br>
      <% end %>
      <% @user.errors.full_messages_for(:username).each do |message| %>
        <a><%= message %></a><br>
      <% end %>
      <% @user.errors.full_messages_for(:password).each do |message| %>
        <a><%= message %></a><br>
      <% end %>
    </div>
  <%end%>
  <%= f.text_field(:username, {class: 'form-control', placeholder: 'Username', required: true, autofocus: true, autocomplete: "off"}) %>
  <%= f.text_field(:password, {class: 'form-control', placeholder: 'Password', required: true, type: "password"}) %>
  <%= submit_tag("Login", {class: 'btn btn-lg btn-primary btn-block'}) %>
<%end%>
<%= stylesheet_link_tag "signin" %>
